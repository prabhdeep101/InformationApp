<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_bg_tiles"
    tools:context=".MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D69A00"
        android:title="Information Hub"
        android:titleTextColor="#FFFFFF"
        android:padding="16dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="80dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/owl_point_right" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kia Ora. Welcome!"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn with us"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- LEARN ABOUT ESCORTING -->
            <LinearLayout
                android:id="@+id/layoutLearn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_background"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="46dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/baseline_info_24" />

                    <TextView
                        android:id="@+id/toggleLearn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawableEnd="@drawable/arrow_drop"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="LEARN ABOUT ESCORTING"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>



                <!-- drop down -->

                <LinearLayout
                    android:id="@+id/learnContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:radius="20dp"
                    android:background="@drawable/rounded_dropdown_bg"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:text="Escorting is a safety focused process used when tamariki (children) or rangatahi (youth) in the care or custody of Oranga Tamariki need to travel and there are concerns for their wellbeing, the safety of staff , or the public. It’s based on risk assessments that highlight potential dangers and is only used when extra care is needed to ensure the journey is secure and respectful."
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/learnMoreBtnEscorting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn More"
                        android:background="@drawable/rounded_button"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- PROCESS OF ESCORTING -->
            <LinearLayout
                android:id="@+id/layoutProcess"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="46dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/baseline_process_24" />

                    <TextView
                        android:id="@+id/toggleProcess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PROCESS OF ESCORTING"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/arrow_drop"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:textSize="20dp"/>
                </LinearLayout>



                <!-- drop down -->
                <LinearLayout
                    android:id="@+id/processContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_dropdown_bg"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:text="Escorting is a safety focused process used when tamariki (children) or rangatahi (youth) in the care or custody of Oranga Tamariki need to travel and there are concerns for their wellbeing, the safety of staff , or the public. It’s based on risk assessments that highlight potential dangers and is only used when extra care is needed to ensure the journey is secure and respectful."
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/learnMoreBtnProcess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn More"
                        android:background="@drawable/rounded_button"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- LEGAL RIGHTS OF PARENTS -->
            <LinearLayout
                android:id="@+id/layoutParents"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="46dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/baseline_family_24" />

                    <TextView
                        android:id="@+id/toggleParents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LEGAL RIGHTS OF PARENTS"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/arrow_drop"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:textSize="20dp"/>

                </LinearLayout>



                <!-- drop down -->
                <LinearLayout
                    android:id="@+id/parentsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_dropdown_bg"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:text="Escorting is a safety focused process used when tamariki (children) or rangatahi (youth) in the care or custody of Oranga Tamariki need to travel and there are concerns for their wellbeing, the safety of staff , or the public. It’s based on risk assessments that highlight potential dangers and is only used when extra care is needed to ensure the journey is secure and respectful."
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/learnMoreBtnParents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn More"
                        android:background="@drawable/rounded_button"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- LEGAL RIGHTS OF CAREGIVERS -->
            <LinearLayout
                android:id="@+id/layoutCaregivers"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="46dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/baseline_caregiver_24" />

                    <TextView
                        android:id="@+id/toggleCaregivers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LEGAL RIGHTS OF CAREGIVERS"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/arrow_drop"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:textSize="20dp"/>

                </LinearLayout>



                <!-- drop down -->
                <LinearLayout
                    android:id="@+id/caregiversContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_dropdown_bg"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:text="Escorting is a safety focused process used when tamariki (children) or rangatahi (youth) in the care or custody of Oranga Tamariki need to travel and there are concerns for their wellbeing, the safety of staff , or the public. It’s based on risk assessments that highlight potential dangers and is only used when extra care is needed to ensure the journey is secure and respectful."
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/learnMoreBtnCaregiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn More"
                        android:background="@drawable/rounded_button"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Quiz Button -->
            <LinearLayout
                android:id="@+id/btnQuizWrapper"
                android:layout_width="206dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/button_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <ImageView
                    android:id="@+id/quizIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Quiz Icon"
                    android:src="@drawable/owl_head" />

                <TextView
                    android:id="@+id/btnQuiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="QUIZ"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />

<!--                arrow image resizeable-->
<!--                <ImageView-->
<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:src="@drawable/arrow_right"-->
<!--                    android:contentDescription="Dropdown arrow" />-->

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
