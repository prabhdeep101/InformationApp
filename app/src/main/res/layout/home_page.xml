<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_bg_tiles"
    tools:context=".MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D69A00"
        android:title="Information Hub"
        android:titleTextColor="#FFFFFF"
        android:padding="16dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="80dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/owl_point_right" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kia Ora. Welcome!"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn with us"
                        android:textSize="16dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- LEARN ABOUT ESCORTING -->
            <LinearLayout
                android:id="@+id/layoutLearn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/toggleLearn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LEARN ABOUT ESCORTING"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/arrow_drop"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:id="@+id/learnContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Escorting is a safely focused process..."
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnLearnMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEARN MORE"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#004AAD"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- PROCESS OF ESCORTING -->
            <LinearLayout
                android:id="@+id/layoutProcess"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/toggleProcess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROCESS OF ESCORTING"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/arrow_drop"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:id="@+id/processContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Step 1" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Step 2" />
                </LinearLayout>
            </LinearLayout>

            <!-- LEGAL RIGHTS OF PARENTS -->
            <LinearLayout
                android:id="@+id/layoutParents"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/toggleParents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LEGAL RIGHTS OF PARENTS"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/arrow_drop"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:id="@+id/parentsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Right 1" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Right 2" />
                </LinearLayout>
            </LinearLayout>

            <!-- LEGAL RIGHTS OF CAREGIVERS -->
            <LinearLayout
                android:id="@+id/layoutCaregivers"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/toggleCaregivers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LEGAL RIGHTS OF CAREGIVERS"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/arrow_drop"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:id="@+id/caregiversContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Right A" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Right B" />
                </LinearLayout>
            </LinearLayout>

            <!-- Quiz Button -->
            <LinearLayout
                android:id="@+id/btnQuizWrapper"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/button_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <ImageView
                    android:id="@+id/quizIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Quiz Icon"
                    android:src="@drawable/owl_head" />

                <TextView
                    android:id="@+id/btnQuiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="QUIZ"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
